# Docker Environment Variables for Nhandare Backend
# Copy this file to .env and modify as needed

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Frontend URLs
FRONTEND_URL=http://localhost:8081
ADMIN_PANEL_URL=http://localhost:3000
SOCKET_CORS_ORIGIN=http://localhost:8081

# Payment Processing (Pesepay for Zimbabwe)
PESEPAY_INTEGRATION_KEY=your-pesepay-integration-key
PESEPAY_ENCRYPTION_KEY=your-pesepay-encryption-key
PESEPAY_API_URL=https://api.pesepay.com/api/payments-engine
PESEPAY_ENVIRONMENT=sandbox

# Database (these are set by docker-compose, but can be overridden)
# DATABASE_URL=postgresql://nhandare_user:nhandare_password@postgres:5432/nhandare_gaming?schema=public
# REDIS_URL=redis://:redis_password@redis:6379

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12

# Game Configuration
CHESS_AI_DIFFICULTY=random
TOURNAMENT_MAX_PLAYERS=64

# Zimbabwe Business Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,ZWL
ZIMBABWE_PHONE_PREFIX=+263
MIN_TOURNAMENT_ENTRY_FEE=1
MAX_TOURNAMENT_ENTRY_FEE=100
PLATFORM_FEE_PERCENTAGE=0.2
MIN_PRIZE_PAYOUT_PERCENTAGE=0.7

# File Uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
